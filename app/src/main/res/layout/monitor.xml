<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/start_monitor_btn"
                    style="@style/buttonNumberStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_number_violet_shape"
                    android:text="Start Monitor"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/stop_monitor_btn"
                    style="@style/buttonNumberStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_number_violet_shape"
                    android:text="Stop Monitor"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Card Type: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/card_type_txtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sle_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/read_btn"
                        style="@style/buttonNumberStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_number_violet_shape"
                        android:text="Read"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="addr: "
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/addr_edt"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:maxLength="4"
                            android:text="0"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="num: "
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/num_edt"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:maxLength="4"
                            android:text="256"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/read_result_edt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@android:drawable/edit_text"
                            android:editable="false"
                            android:textSize="14sp" />
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/write_btn"
                        style="@style/buttonNumberStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_number_violet_shape"
                        android:text="Write"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="addr: "
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/write_addr_edt"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:maxLength="4"
                            android:text="0"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="content: "
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/write_content_edt"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:drawable/edit_text"
                        android:maxLength="1024"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PSC"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/verify_psc_btn"
                            style="@style/buttonNumberStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/button_number_violet_shape"
                            android:text="Verify"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/modify_psc_btn"
                            style="@style/buttonNumberStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/button_number_violet_shape"
                            android:text="Modify"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/psc_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:maxLength="4"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MSC Track Data:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/msc_data_edt"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@android:drawable/edit_text"
                        android:editable="false"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/smartcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/atr_btn"
                        style="@style/buttonNumberStyle"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_number_violet_shape"
                        android:text="@string/get_ATR" />

                    <Button
                        android:id="@+id/protocol_btn"
                        style="@style/buttonNumberStyle"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_number_violet_shape"
                        android:text="@string/get_PROTOCOL" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textReader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/reader"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textAPDU"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="@string/apdu_to_send"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/editTextAPDU"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:hint="@string/apdu_to_send"
                        android:inputType="textMultiLine"
                        android:text="A0A40000023F00"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/buttonAPDU"
                        style="@style/buttonNumberStyle"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_number_violet_shape"
                        android:onClick="sendAPDUkOnClick"
                        android:text="@string/send_apdu" >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>