<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    
    
    <TextView android:id="@+id/spinnerText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/color_6b6b6b"
		android:text="led_choose">
    </TextView>
    
  	<Spinner android:id="@+id/ledSpinner"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:entries="@array/led_item">
  	</Spinner>
    
    <TextView
        android:id="@+id/textLedCtrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_6b6b6b"
        android:text="led_control" />

    <Button
        android:id="@+id/onBtn"
        style="@style/buttonNumberStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_number_violet_shape"
        android:text="led_on" />

    <Button
        android:id="@+id/offBtn"
        style="@style/buttonNumberStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_number_violet_shape"
        android:text="led_off" />
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginTop="10dp"
    	android:orientation="horizontal">
    	<TextView
	        android:id="@+id/textPeriod"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_6b6b6b"
	        android:text="led_period(ms)" />
    	
    	<EditText
    	    android:id = "@+id/editPeriod"
    	    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="500"
	        android:textColor="@color/color_6b6b6b"
    	    android:inputType="none"/>
    	
    	<Button
    	    android:id = "@+id/periodBtn"
    	    style="@style/buttonNumberStyle"
    	    android:layout_width = "match_parent"
	        android:layout_height = "wrap_content"
	        android:background="@drawable/button_number_violet_shape"
	        android:text = "blink"
    	    />
        
    </LinearLayout>
     
</LinearLayout>