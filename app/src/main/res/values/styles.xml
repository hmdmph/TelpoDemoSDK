<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 紫色主题 -->
    <style name="VioletTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="button_number_background">@drawable/button_number_violet_shape</item>
        <!--
      <item name="button_function_background">@drawable/button_function_violet_shape</item>
      <item name="button_clear_back_background">@drawable/button_clear_back_violet_shape</item> 
       <item name="main_border_style">@drawable/border_shape_thin</item>
        -->
        <item name="main_title_color">#6871ac</item>
        <item name="main_welcome_title_color">#fff5a8</item>
        <item name="main_frame_color">#f8f8f8</item>
        <item name="main_bottom_color">#2f2f2f</item>
        <item name="main_welcome_title_text_color">#000000</item>
        <item name="main_welcome_title_content_color">#6871ac</item>
        <item name="main_shoufeimingxi_listtv_style">@style/tvSfmxListStyle</item>
        <item name="main_list_padding">1px</item>
        <item name="main_table_title_color">#f7f7f7</item>
        <!-- 首页chekcbox文本样式 -->
        <item name="login_text_style">@style/violetCheckStyle</item>
        <!--
        <item name="button_login_background">@drawable/button_function_violet_shape</item>
        <item name="button_function_noborder_background">@drawable/button_function_noborder_violet_shape</item>
        <item name="spinerbackground_style">@drawable/spinner_selector_thin</item>
        <item name="menuborder_style">@drawable/menu_border_thin</item>
        -->
        <item name="shoufei_table_border_color">#CCCCCC</item>
        <item name="listview_divide_color">#cccccc</item>
        <item name="listview_divide_height">1dip</item>
        <!--
        <item name="upper_right_corner">@drawable/btnlanguage_violet</item>
        <item name="imgnetwork_background">@drawable/imgnetwork_violet</item>
        <item name="dialogclose_background">@drawable/dialogclose_violet</item>
        -->
    </style>

    <!-- 橙色主题 -->
    <style name="OrangeTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--
        <item name="button_number_background">@drawable/button_number_orange_shape</item>
        <item name="button_function_background">@drawable/button_function_orange_shape</item>
        <item name="button_clear_back_background">@drawable/button_clear_back_orange_shape</item>
        -->
        <item name="main_title_color">#001525</item>
        <item name="main_welcome_title_color">#fff5a8</item>
        <item name="main_frame_color">#f8f8f8</item>
        <item name="main_bottom_color">#2f2f2f</item>
        <item name="main_welcome_title_text_color">#000000</item>
        <item name="main_welcome_title_content_color">#e16300</item>
        <item name="main_shoufeimingxi_listtv_style">@style/tvSfmxListStyle</item>
        <!-- <item name="main_border_style">@drawable/border_shape_thick</item> -->
        <item name="main_list_padding">2px</item>
        <item name="main_table_title_color">#f0f0f0</item>
        <!-- 首页chekcbox文本样式 -->
        <item name="login_text_style">@style/orangeCheckStyle</item>
        <!--
        <item name="button_login_background">@drawable/button_number_orange_shape</item>
        <item name="button_function_noborder_background">@drawable/button_function_noborder_orange_shape</item>
        -->
        <item name="shoufei_table_border_color">#111111</item>
        <!--
        <item name="spinerbackground_style">@drawable/spinner_selector_thick</item>
        <item name="menuborder_style">@drawable/menu_border_thick</item>
        -->
        <item name="listview_divide_color">#000000</item>
        <item name="listview_divide_height">2dip</item>
        <!--
        <item name="upper_right_corner">@drawable/btnlanguage_orange</item>
        <item name="imgnetwork_background">@drawable/imgnetwork_orange</item>
        <item name="dialogclose_background">@drawable/dialogclose_orange</item>
        -->
    </style>

    <!-- 数字按钮样式 -->
    <style name="buttonNumberStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 清空，回退按钮样式 -->
    <style name="buttonClearBackStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 功能按钮样式 -->
    <style name="buttonFunctionStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 对话框中的功能按钮样式 -->
    <style name="buttonDialogFunctionStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 收费明细功能按钮样式 -->
    <style name="buttonFunctionDetailStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:textColor">#737cb1</item>
        <item name="android:textSize">25px</item>
    </style>

    <!-- 收费明细功能按钮样式 -->
    <style name="buttonFunctionDetailStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#737cb1</item>
    </style>

    <!-- 收费明细功能按钮样式 -->
    <style name="buttonFunctionDetailStyle2">
        <item name="android:textColor">#737cb1</item>
    </style>

    <!-- 列表标题样式 -->
    <style name="tvSfmxListStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16px</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 列表标题样式 -->
    <style name="tvSfmxListStyle1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16px</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- textview标题样式 -->
    <style name="tvTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- login check 标题样式 -->
    <style name="orangeCheckStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- login 首页checkbox文本样式 -->
    <style name="violetCheckStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 自定义对话框 -->
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 分割线 -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lily_white</item>
    </style>

    <style name="Vertical_Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lily_white</item>
    </style>

